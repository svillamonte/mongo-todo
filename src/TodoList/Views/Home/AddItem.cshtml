@model TodoList.Models.TodoItemModel

@{
    ViewData["Title"] = "Add new item";
}

<div class="row">
    @if (Model.ShowError)
    {
        <div class="alert alert-danger">
            <strong>Something went wrong...</strong> Could you try again?
        </div>
    }

    <div class="col-md-12">
        <form asp-action="AddItem" role="form">
            <div class="form-group">
                <label class="control-label">Add new item</label>
                <div>
                    <input asp-for="Description" class="form-control" />
                </div>
            </div>

            <button type="submit">Add</button>

        </form>        
    </div>
</div>
